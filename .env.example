# Synodos 환경 설정
# 이 파일을 .env로 복사해서 사용하세요
# cp .env.example .env

# DB 설정
DB_USERNAME=flow
DB_PASSWORD=flow123

# JWT 시크릿 (최소 32자 이상의 랜덤 문자열 권장)
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# CORS 허용 도메인 (쉼표로 구분)
# 로컬: http://localhost:3000
# 배포: https://yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000

# 프론트엔드 API 설정
API_URL=
WS_URL=/ws

# OAuth Redirect URI 베이스 URL (배포 시 변경)
# 로컬: http://localhost:8081, 배포: https://yourdomain.com
OAUTH_BASE_URL=http://localhost:8081

# Frontend URL (GitHub 연동 콜백용)
# 로컬: http://localhost:3000, 배포: https://yourdomain.com
# 중요: GitHub 연동(저장소 연결)에 사용됨 - 소셜 로그인과 별도
FRONTEND_URL=http://localhost:3000

# SMTP 설정 (Gmail 앱 비밀번호)
# Gmail에서 2단계 인증 후 앱 비밀번호 생성 필요
# https://myaccount.google.com/apppasswords
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# OpenAI API 설정
# https://platform.openai.com/api-keys 에서 API 키 생성
# Usage limits 설정: https://platform.openai.com/settings/organization/limits
OPENAI_API_KEY=your-openai-api-key

# GitHub OAuth 설정
# https://github.com/settings/developers 에서 OAuth App 생성
GITHUB_OAUTH_CLIENT_ID=your-github-client-id
GITHUB_OAUTH_CLIENT_SECRET=your-github-client-secret

# GitHub Webhook 설정
# 로컬: 비워두면 프론트에서 ngrok URL 입력 요청
# 배포: 실제 서버 도메인 (예: https://yourdomain.com)
GITHUB_WEBHOOK_BASE_URL=

# Google OAuth 설정
# https://console.cloud.google.com 에서 OAuth 2.0 클라이언트 ID 생성
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Naver OAuth 설정
# https://developers.naver.com 에서 애플리케이션 등록
# - 사용 API: 네이버 로그인 (회원이름, 이메일 필수)
# - Callback URL: ${OAUTH_BASE_URL}/login/oauth2/code/naver
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret

# Kakao OAuth 설정
# https://developers.kakao.com 에서 애플리케이션 등록
# - 플랫폼: Web (사이트 도메인 등록)
# - Redirect URI: ${OAUTH_BASE_URL}/login/oauth2/code/kakao
# - 동의항목: 닉네임, 이메일 필수
KAKAO_CLIENT_ID=your-kakao-rest-api-key
KAKAO_CLIENT_SECRET=your-kakao-client-secret
